{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": ".babylon file format",
  "description": "A declarative scene description for babylon.js.",
  "type": "object",
  "required": [
    "autoClear",
    "clearColor",
    "ambientColor",
    "cameras",
    "activeCamera",
    "lights",
    "materials",
    "geometries",
    "meshes"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "autoClear": {
      "type": "boolean"
    },
    "clearColor": {
      "$ref": "common.json#/definitions/Color3"
    },
    "ambientColor": {
      "$ref": "common.json#/definitions/Color3"
    },
    "gravity": {
      "$ref": "common.json#/definitions/Vector3",
      "default": [
        0,
        -9,
        0
      ]
    },
    "cameras": {
      "type": "array",
      "items": {
        "$ref": "camera.json"
      }
    },
    "activeCamera": {
      "type": "string"
    },
    "lights": {
      "type": "array",
      "items": {
        "$ref": "light.json"
      }
    },
    "reflectionProbes": {
      "$comment": "Must have texture.json#/isReflectionProbe set to true",
      "type": "array",
      "items": {
        "$ref": "texture.json"
      }
    },
    "materials": {
      "type": "array",
      "items": {
        "$ref": "material.json"
      }
    },
    "geometries": {
      "type": "object",
      "properties": {
        "vertexData": {
          "type": "array",
          "items": {
            "$ref": "vertex_data.json"
          }
        }
      }
    },
    "meshes": {
      "type": "array",
      "items": {
        "$ref": "mesh.json"
      }
    },
    "multiMaterials": {
      "type": "array",
      "items": {
        "$ref": "multi_material.json"
      }
    },
    "shadowGenerators": {
      "type": "array",
      "items": {
        "$ref": "shadow_generator.json"
      }
    },
    "skeletons": {
      "type": "array",
      "items": {
        "$ref": "skeleton.json"
      }
    },
    "particleSystems": {
      "type": "array",
      "items": {
        "$ref": "particle_system.json"
      }
    },
    "lensFlareSystems": {
      "type": "array",
      "items": {
        "$ref": "lens_flare_system.json"
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "$ref": "action.json"
      }
    },
    "sounds": {
      "type": "array",
      "items": {
        "$ref": "sound.json"
      }
    },
    "collisionsEnabled": {
      "type": "boolean"
    },
    "physicsEnabled": {
      "type": "boolean"
    },
    "physicsGravity": {
      "$ref": "common.json#/definitions/Vector3",
      "default": [
        0,
        -9.81,
        0
      ]
    },
    "physicsEngine": {
      "type": "string",
      "enum": [
        "oimo",
        "cannon"
      ],
      "default": "oimo"
    },
    "animations": {
      "type": "array",
      "items": {
        "$ref": "animation.json"
      }
    },
    "autoAnimate": {
      "type": "boolean"
    },
    "autoAnimateFrom": {
      "type": "integer"
    },
    "autoAnimateTo": {
      "type": "integer"
    },
    "autoAnimateLoop": {
      "type": "boolean"
    },
    "autoAnimateSpeed": {
      "type": "number"
    }
  }
}