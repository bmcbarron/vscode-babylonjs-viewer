{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MultiMaterial",
  "type": "object",
  "required": [
    "name",
    "id",
    "materials"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "tags": {
      "type": "string"
    },
    "materials": {
      "$comment": "IDs of the sub-materials",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}