{
	"name": "babylonjs-viewer",
	"version": "0.9.0",
	"publisher": "bmcbarron",
	"engines": {
		"vscode": "^1.64.0"
	},
	"license": "SEE LICENSE in LICENSE.md",
	"displayName": "Babylon.js Asset Viewer",
	"description": "A asset renderer/viewer utilizing the Babylon.js engine.",
	"icon": "media/Logo_Fullscreen.png",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/bmcbarron/vscode-babylonjs-viewer.git"
	},
	"homepage": "https://github.com/bmcbarron/vscode-babylonjs-viewer",
	"bugs": {
		"url": "https://github.com/bmcbarron/vscode-babylonjs-viewer/issues"
	},
	"categories": [
		"Visualization"
	],
	"keywords": [
		"Babylon.js",
		".babylon",
		"viewer"
	],
	"preview": true,
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"panel": [
				{
					"id": "babylonjs",
					"title": "Babylon.js",
					"icon": "./dist/babylonjs_logo.svg"
				}
			]
		},
		"views": {
			"babylonjs": [
				{
					"type": "webview",
					"id": "babylonjs.assetViewer",
					"name": "Asset Viewer"
				}
			]
		},
		"customEditors": [
			{
				"viewType": "babylonjs.assetDigest",
				"displayName": "Babylon.js Asset Digest",
				"priority": "default",
				"selector": [
					{
						"filenamePattern": "*.babylon"
					},
					{
						"filenamePattern": "*.gltf"
					},
					{
						"filenamePattern": "*.glb"
					},
					{
						"filenamePattern": "*.obj"
					}
				]
			}
		],
		"commands": [
			{
				"command": "babylonjs.assetViewer.open",
				"title": "Open the Babylon.js Viewer",
				"category": "Babylon.js"
			},
			{
				"command": "babylonjs.assetViewer.render",
				"title": "Render in the Asset Viewer",
				"category": "Babylon.js"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceFilename =~ /\\.(babylon|gltf|glb|obj)$/",
					"command": "babylonjs.assetViewer.render",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"when": "resourceFilename =~ /\\.(babylon|gltf|glb|obj)$/",
					"command": "babylonjs.assetViewer.render",
					"group": "navigation"
				}
			]
		},
		"languages": [
			{
				"id": "json",
				"extensions": [
					".babylon"
				]
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "*.babylon",
				"url": "./dist/schema/babylon.json"
			}
		]
	},
	"activationEvents": [
		"onView:babylonjs.assetViewer",
		"onCommand:babylonjs.assetViewer.open",
		"onCommand:babylonjs.assetViewer.render",
		"onCustomEditor:babylonjs.assetDigest"
	],
	"dependencies": {
		"@babylonjs/core": "^5.0.0-beta.6",
		"@babylonjs/gui": "^5.0.0-beta.6",
		"@babylonjs/inspector": "^5.0.0-beta.6",
		"@babylonjs/loaders": "^5.0.0-beta.6",
		"@babylonjs/materials": "^5.0.0-beta.6",
		"@babylonjs/serializers": "^5.0.0-beta.6",
		"copy-webpack-plugin": "^10.2.4",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@types/vscode-webview": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/codicons": "^0.0.28",
		"@vscode/test-electron": "^2.0.3",
		"css-loader": "^6.6.0",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"json-schema-to-typescript": "^10.1.5",
		"mini-css-extract-plugin": "^2.5.3",
		"mocha": "^9.1.3",
		"sass": "^1.49.7",
		"sass-loader": "^12.4.0",
		"source-map-loader": "^3.0.1",
		"style-loader": "^3.3.1",
		"svg-url-loader": "^7.1.1",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.4",
		"webpack": "^5.68.0",
		"webpack-cli": "^4.9.2"
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "npm run package",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"prepackage": "rm -rf ./dist",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"// generate-schema-types": "TODO: look into a type generator that puts constants into the scope of their respective schema files.",
		"generate-schema-types": "npx json2ts -i static/schema/babylon.json --cwd static/schema/ -o static/types/babylon.d.ts"
	}
}
