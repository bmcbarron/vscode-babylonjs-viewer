{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShadowGenerator",
  "type": "object",
  "required": [
    "useVarianceShadowMap",
    "mapSize",
    "lightId",
    "renderList"
  ],
  "additionalProperties": false,
  "properties": {
    "useBlurVarianceShadowMap": {
      "type": "boolean"
    },
    "useVarianceShadowMap": {
      "type": "boolean"
    },
    "usePoissonSampling": {
      "type": "boolean"
    },
    "mapSize": {
      "type": "integer",
      "enum": [
        64,
        128,
        256,
        512,
        1024,
        2048
      ]
    },
    "bias": {
      "type": "number"
    },
    "forceBackFacesOnly": {
      "type": "number"
    },
    "lightId": {
      "type": "string"
    },
    "renderList": {
      "$comment": "IDs of meshes to be rendered",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}